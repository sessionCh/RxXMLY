    pod 'RxCocoa'
    pod 'RxAlamofire'
    pod 'RxDataSources',    '~> 3.0'
    pod 'NSObject+Rx'
    pod 'RxGesture'

    # UI
    pod 'SnapKit'
    pod 'TYCyclePagerView'
    pod 'TYPagerController'
    pod 'MJRefresh'

    # Logging
    
    # Misc.
    pod 'Then'
    pod 'ReusableKit'
    pod 'SwiftyColor'
    pod 'MLeaksFinder'              # 检测内存泄漏

    # SDK
    
end

